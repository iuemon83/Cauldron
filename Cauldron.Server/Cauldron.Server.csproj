<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Protos\cauldron.api.proto" />
    <None Remove="Protos\cauldron.model.proto" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos\cauldron.api.proto" GrpcServices="Server" />
    <Protobuf Include="Protos\cauldron.model.proto" GrpcServices="Server" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.AspNetCore" Version="2.33.1" />
    <PackageReference Include="System.Reactive" Version="5.0.0" />
  </ItemGroup>

</Project>
